@model List<ECommercePortfolio.Models.Product>

@{
    ViewData["Title"] = "Home Page";
    // The list of cart items is no longer needed on this page
}

<div class="hero-section text-center">
    <h1 class="hero-title">Modern E-Commerce Store</h1>
    <p class="hero-subtitle">Discover our curated collection of products.</p>
</div>

<form asp-controller="Home" asp-action="Index" method="get" class="filter-form mb-5">
    <div class="row g-2">
        <div class="col-md-4">
            <input type="text" name="searchString" class="form-control" placeholder="Search for products..." value="@ViewData["CurrentFilter"]">
        </div>
        <div class="col-md-2">
            <select name="category" class="form-control" asp-items="@(new SelectList(new[] {"All", "Shirt", "Jeans", "Shoes"}, ViewData["CurrentCategory"]))">
            </select>
        </div>
        <div class="col-md-3">
             <select name="sortOrder" class="form-control" asp-items="@(new SelectList(new List<SelectListItem>
                 {
                     new SelectListItem { Text = "Sort by Name", Value = "name" },
                     new SelectListItem { Text = "Price: Low to High", Value = "price_asc" },
                     new SelectListItem { Text = "Price: High to Low", Value = "price_desc" }
                 }, "Value", "Text", ViewData["CurrentSortOrder"]))">
            </select>
        </div>
        <div class="col-md-1">
            <button type="submit" class="btn btn-primary w-100">Go</button>
        </div>
        <div class="col-md-2">
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary w-100">Clear All</a>
        </div>
    </div>
</form>

@if (Model.Any())
{
    var favourites = ViewData["Favourites"] as List<int> ?? new List<int>();
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card product-card h-100 shadow-sm d-flex flex-column justify-content-between">

                    <a asp-action="ToggleFavourite" asp-route-id="@product.Id"
                       class="favourite-icon @(favourites.Contains(product.Id) ? "active" : "")"
                       title="Add to Favourites">
                        <i class="bi bi-heart"></i>
                    </a>

                    <a asp-controller="Home" asp-action="ProductDetails" asp-route-id="@product.Id" class="product-link">
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" />
                    </a>

                    <div class="card-body d-flex flex-column align-items-center justify-content-center text-center">
                        <h5 class="card-title mb-2">@product.Name</h5>
                        <p class="price mb-0">
                            <strong>$@product.Price</strong>
                            @if (product.OriginalPrice.HasValue)
                            {
                                <del class="text-muted ms-2">$@product.OriginalPrice</del>
                            }
                        </p>

                        </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center">
        <img src="/images/sorry1.png" alt="No products found" style="max-width: 400px;" />
        <h4 class="mt-4">Sorry, no products matched your search.</h4>
        <p>Please try a different search or filter.</p>
    </div>
}