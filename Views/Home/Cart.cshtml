@model List<CartItem>
@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container mt-5">
    <h1 class="mb-4">Shopping Cart</h1>

    @if (TempData["CartError"] != null)
    {
        <div class="alert alert-warning">
            @TempData["CartError"]
        </div>
    }

    <a href="@ViewData["GoBackUrl"]" class="btn btn-outline-primary mb-4">
    <i class="bi bi-arrow-left"></i> Go Back
</a>



    @if (Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Product</th>
                    <th></th>
                    <th>Size</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    @if (item.Product != null)
                    {
                        <tr>
                            <td><img src="@item.Product.ImageUrl" style="width: 100px; border-radius: 8px;" /></td>
                            <td>@item.Product.Name</td>
                            <td>@item.Size</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <!-- Decrease -->
                                    <form asp-action="UpdateCartQuantity" asp-controller="Home" method="post" class="me-2">
                                        <input type="hidden" name="id" value="@item.Product.Id" />
                                        <input type="hidden" name="size" value="@item.Size" />
                                        <input type="hidden" name="change" value="-1" />
                                        <button type="submit" class="btn btn-outline-secondary btn-sm">-</button>
                                    </form>

                                    <!-- Show quantity -->
                                    <span class="mx-2">@item.Quantity</span>

                                    <!-- Increase -->
                                    <form asp-action="UpdateCartQuantity" asp-controller="Home" method="post" class="ms-2">
                                        <input type="hidden" name="id" value="@item.Product.Id" />
                                        <input type="hidden" name="size" value="@item.Size" />
                                        <input type="hidden" name="change" value="1" />
                                        <button type="submit" class="btn btn-outline-secondary btn-sm">+</button>
                                    </form>
                                </div>
                            </td>
                            <td>$@(item.Product.Price * item.Quantity)</td>
                            <td>
                                <form asp-action="RemoveFromCart" method="post">
                                    <input type="hidden" name="id" value="@item.Product.Id" />
                                    <input type="hidden" name="size" value="@item.Size" />
                                    <button type="submit" class="btn btn-outline-danger btn-sm" title="Remove Item">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <div class="text-end">
            <h4>Total: $@Model.Sum(item => item.Product != null ? (item.Product.Price * item.Quantity) : 0)</h4>
            <a href="#" class="btn btn-success mt-3">Proceed to Checkout</a>
        </div>
    }
    else
{
    <div class="text-center my-5">
        <img src="/images/emptycart.png" alt="Empty Cart" style="max-width: 250px;" class="mb-4" />
        <h4>Your cart is empty.</h4>
        <p class="text-muted">Looks like you haven‚Äôt added anything yet.</p>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">
            üõçÔ∏è Continue Shopping
        </a>
    </div>
}

</div>
