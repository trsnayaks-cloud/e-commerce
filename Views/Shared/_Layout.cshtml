<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ECommercePortfolio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ECommercePortfolio.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="loading">
        <div class="loading-text">
            <span class="loading-text-words">L</span>
            <span class="loading-text-words">O</span>
            <span class="loading-text-words">A</span>
            <span class="loading-text-words">D</span>
            <span class="loading-text-words">I</span>
            <span class="loading-text-words">N</span>
            <span class="loading-text-words">G</span>
        </div>
    </div>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ECommercePortfolio</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        </ul>

                    <ul class="navbar-nav ms-auto align-items-center">
                        <li class="nav-item">
                            <a class="nav-link text-dark nav-icon" asp-action="Favourites" asp-controller="Home" title="Favourites"><i class="bi bi-heart"></i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark nav-icon" asp-action="Cart" asp-controller="Home" title="Cart"><i class="bi bi-cart3"></i></a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark nav-icon" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" title="Profile">
                                <i class="bi bi-person-circle"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
    @if (Context.Session.GetString("IsLoggedIn") == "true")
    {
        <li><a class="dropdown-item" asp-controller="Account" asp-action="Details">Account Details</a></li>
        <li><a class="dropdown-item" asp-controller="Orders" asp-action="Index">My Orders</a></li>
        <li><a class="dropdown-item" asp-controller="Account" asp-action="Address">Address</a></li>
        <li><a class="dropdown-item" asp-controller="Account" asp-action="Settings">Settings</a></li>
        <li><hr class="dropdown-divider"></li>
        <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">Logout</a></li>
    }
    else
    {
        <li><a class="dropdown-item" asp-controller="Account" asp-action="Login">Login</a></li>
    }

    <!-- Always show Dark Mode toggle -->
    <li><hr class="dropdown-divider"></li>
    <li class="d-flex justify-content-between align-items-center px-3 py-2">
        <span>Dark Mode</span>
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" id="themeSwitch">
            <label class="form-check-label" for="themeSwitch"></label>
        </div>
    </li>
</ul>




                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="site-footer">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <h6>ABOUT</h6>
                    <p class="text-justify">ECommercePortfolio.com is a project built to demonstrate a modern online shopping experience. We focus on clean design, responsive layout, and a great user experience.</p>
                </div>
                <div class="col-md-3">
                    <h6>HELP</h6>
                    <ul class="footer-links">
                        <li><a href="#">Payments</a></li>
                        <li><a href="#">Shipping</a></li>
                        <li><a href="#">Cancellation & Returns</a></li>
                        <li><a href="#">FAQ</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h6>CONSUMER POLICY</h6>
                    <ul class="footer-links">
                        <li><a href="#">Return Policy</a></li>
                        <li><a href="#">Terms Of Use</a></li>
                        <li><a href="#">Security</a></li>
                        <li><a href="#">Privacy</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h6>Mail Us</h6>
                    <p>
                        ECommerce Portfolio Internet Private Limited,<br>
                        Hyderabad, 500081,<br>
                        Telangana, India
                    </p>
                </div>
            </div>
            <hr>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
    // Load saved theme
    document.addEventListener("DOMContentLoaded", () => {
        const themeSwitch = document.getElementById("themeSwitch");
        const currentTheme = localStorage.getItem("theme");

        if (currentTheme === "dark") {
            document.body.classList.add("dark-mode");
            if (themeSwitch) themeSwitch.checked = true;
        }

        if (themeSwitch) {
            themeSwitch.addEventListener("change", () => {
                if (themeSwitch.checked) {
                    document.body.classList.add("dark-mode");
                    localStorage.setItem("theme", "dark");
                } else {
                    document.body.classList.remove("dark-mode");
                    localStorage.setItem("theme", "light");
                }
            });
        }
    });
</script>

</body>
</html>